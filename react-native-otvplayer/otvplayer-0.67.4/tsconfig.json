{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "node_modules/*",
        "../otvplayer-0.67.4/node_modules/*"
      ]
    },
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": false,
    "lib": [
      "es2015",
      "dom",
      "es2017",
      "es6",
      "es2018"
    ],
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "noEmit": false,
    "strict": false,
    "downlevelIteration": true,
    "types": [
      "react",
    ]
  },
  "include": [
    "../src",
  ],
  "exclude": [
    "./node_modules",
    "../src/**/*.handheld.*"
  ]
}